<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー解除', user_relationships_path(user), class: 'btn btn-danger btn-block', method: :delete %>
  <% else %>
    <%= link_to 'フォロー', user_relationships_path(user), class: 'btn btn-primary btn-block', method: :post %>
  <% end %>
<% end %>