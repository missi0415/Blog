<br>
<div class="jumbotron">
  <h1><%= @book.title %>の編集</h1>
  <p class="lead">より良い情報を伝えてあげよう</p>
  <hr class="my-4">
  <p>共有された参考書を調べて自分の力に！<br></p>
  <!--<a class="btn btn-primary btn-lg" href="/users/sign_up" role="button">新規登録</a>-->
</div>
<br>
<%= form_with model: @book, local: true do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <table class="table table-borderless col-8 mx-auto">

    <tr>
      <th>
        画像
      </th>
      <td>
        <%= f.attachment_field :image %>
      </td>

    </tr>
    <tr>
      <th>
        <%= f.label :タイトル %>
      </th>
      <td>
        <%= f.text_field :title, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :著者 %>
      </th>
      <td>
        <%= f.text_field :author, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :カテゴリ %>
      </th>
      <td>
        <%= f.select :category_id, @categories.pluck(:name, :id),{include_blank: "カテゴリを選択してください。"}, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :カテゴリ（その他） %>
      </th>
      <td>
        <%= f.text_field :name, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :説明 %>
      </th>
      <td>
        <%= f.text_field :body, class: "form-control" %>
      </td>
    </tr>
  </table>

  <div class="actions text-center">
    <%= f.submit "登録", class: "btn btn-primary" %><br>
  </div>
<% end %>
<br>