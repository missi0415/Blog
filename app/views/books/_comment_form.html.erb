<div class="row">
  <div class="col-6">
    <%= form_with model: comment, local: true do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.label :コメント %>
      <%= f.text_field :comment, class: "form-control" %>
      <%= f.submit "登録", class: "btn btn-primary" %><br>
    <% end %>
  </div>
</div>
<br>