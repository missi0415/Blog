<div class="overflow-auto col-8 mx-auto", style="height: 50rem; background-color: #87cefa;">
  <% chats.each do |chat| %>
    <div class="talk">
      <% unless current_user.id == chat.user_id %>
        <div class="talk_left">
        <%= link_to user_path(chat.user_id), class: "link text-dark" do %>
          <%= attachment_image_tag chat.user, :image, size: "40x40", style: "border-radius: 50%;", fallback: "no_image.jpeg" %>
        <% end %>
          <p><%= chat.message %></p>
          <span style="font-size: 5px;"><%= chat.created_at.strftime("%m-%d　%H:%M") %></span>
        </div>
      <% else %>
        <div class="talk_right d-flex">
          <span class="mt-4 mr-1", style="font-size: 5px;"><%= chat.created_at.strftime("%m-%d　%H:%M") %></span>
          <p><%= chat.message %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>