<% comments.each do |comment| %>
  <div class="card col-8 mx-auto">
    <div class="card-body">
      <div class="d-flex">
        <div class="col-3 text-center">
          <%= link_to user_path(user), class: "link text-dark" do %>
            <%= attachment_image_tag comment.user, :image, size: "100x100", style: "border-radius: 50%;", fallback: "no_image.jpeg" %>
            <br><br>
            <h5><%= comment.user.name %></h5>
          <% end %>
        </div>
        <div class="col-9">
          <div><%= comment.comment %></div>
        </div>
      </div>
      <div class="d-flex align-items-end justify-content-end">
        <p><%= comment.created_at.strftime("%Y-%m-%d　%H:%M") %></p>&emsp;
        <% if current_user.id == comment.user_id %>
          <p><%= link_to "削除", book_comment_path(book,comment), method: :delete, data: {confirm: "本当に削除しますか？"} %></p>
        <% end %>
      </div>
    </div>
  </div>
  <br>
<% end %>
